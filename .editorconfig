# JungleBook EditorConfig
# Ensures consistent formatting across VS Code, PyCharm, WebStorm, etc.

root = true

# ---- Default ----
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 4

# ---- Markdown / YAML / JSON ----
[*.{md,yml,yaml,json}]
indent_size = 2
trim_trailing_whitespace = false  # keep intentional spaces in markdown

# ---- Python ----
[*.py]
indent_size = 4
max_line_length = 88  # black default

# ---- JavaScript / TypeScript ----
[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

# ---- TOML ----
[*.toml]
indent_size = 2

# ---- HTML / CSS / SCSS ----
[*.{html,css,scss}]
indent_size = 2

